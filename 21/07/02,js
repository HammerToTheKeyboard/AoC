const { on } = require('events');
const fs = require('fs')
const path = require("path");
const rawInput = fs.readFileSync(path.resolve(__dirname,'input')).toString()
const input = rawInput.split(",").map(e => parseInt(e))

const pos = input.sort((a,b) => a - b)
const avgPos = (Math.round(pos.reduce((a,b) => a + b)/input.length))-1

const dis = pos.map(e => Math.abs(e - avgPos))
const answer= dis.map(e => e*(e+1)/2).reduce((a,b) => a + b)

console.log(answer)

//Solved. Answer = 98368490